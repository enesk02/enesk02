package kelime.sayısını.bulmak;
     //Kullanıcıdan girilen cümlede kaç adet harf kaç adet kelime olduğunu 
       //yazan program?

import java.util.Scanner;

public class KelimeSayısınıBulmak {

    public static void main(String[] args) {
     String yazi ;
     Scanner s = new Scanner(System.in);
     System.out.println("Cümle giriniz: ");
       yazi= s.nextLine();
       System.out.println("Harf sayısı: " + yazi.length());
       
       int sayac = 0 ;
       for(int i =0;i<yazi.length();i++){
       if(yazi.charAt(i)== ' ')  sayac++;
       
       }
       System.out.println("kelime sayısı = " +(sayac+1));
    }
    
}
